<img src="img/fun.png">
<h1>Do you know these words?</h1>

<% @list.each do |word| %>
  <h4><a href="/word/<%= word.id %>"><%= word.word %></a></h4>
<% end %>

<h4>Add your own word and definition to the list!</h4>

<form action="/" method="post">
  <div class="form-group">
    <label for="theWord">Word: </label>
    <input id="theWord" name="theWord" class="form-control" type="text">
  </div>

  <div class="form-group">
    <label for="theDefinition">Definition: </label>
    <input id="theDefinition" name="theDefinition" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add word</button>
</form>
